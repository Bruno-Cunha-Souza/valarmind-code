{
    "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
    "formatter": {
        "indentStyle": "space",
        "lineWidth": 160,
        "indentWidth": 4
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "quoteStyle": "single",
            "jsxQuoteStyle": "double",
            "semicolons": "asNeeded",
            "trailingCommas": "es5"
        }
    },
    "json": {
        "formatter": {
            "enabled": false
        }
    },
    "css": {
        "linter": {
            "enabled": false
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "off",
                "noArrayIndexKey": "off",
                "noDuplicateCustomProperties": { "level": "warn" }
            },
            "a11y": {
                "noSvgWithoutTitle": { "level": "warn" },
                "useSemanticElements": { "level": "warn" },
                "useKeyWithClickEvents": { "level": "warn" }
            },
            "complexity": {
                "noImportantStyles": { "level": "warn" },
                "noBannedTypes": { "level": "warn" },
                "useOptionalChain": { "level": "warn" },
                "useLiteralKeys": { "level": "warn" }
            },
            "correctness": {
                "noUnusedVariables": {
                    "level": "warn",
                    "options": { "ignoreRestSiblings": true }
                },
                "noUnusedImports": { "level": "warn" },
                "noUnusedFunctionParameters": { "level": "warn" }
            },
            "style": {
                "noNonNullAssertion": "off"
            }
        }
    },
    "files": {
        "includes": [
            "**",
            "!**/dist",
            "!**/*.generated.js",
            "!**/node_modules",
            "!**/public",
            "!**/.valarmind",
            "!**/coverage"
        ]
    }
}
